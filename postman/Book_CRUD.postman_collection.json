{
  "info": {
    "_postman_id": "f6fc27eb-a50e-4542-95fc-4fce8f1df0f5",
    "name": "Book CRUD Basic Checks",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Коллекция для проверки базовых CRUD-операций над сущностью книги на локальном API."
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "1. Create book (POST)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const randomSuffix = Math.random().toString(36).substring(2, 8);",
              "const randomTitle = `Book-${randomSuffix}`;",
              "pm.collectionVariables.set('bookTitle', randomTitle);",
              "pm.environment.set('lastGeneratedBookTitle', randomTitle);",
              "console.log('Generated book title:', randomTitle);"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response time is below 2000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(2000);",
              "});",
              "",
              "const jsonData = pm.response.json();",
              "",
              "pm.test('Response contains id', function () {",
              "    pm.expect(jsonData).to.have.property('id');",
              "});",
              "",
              "pm.test('Response title equals generated title', function () {",
              "    pm.expect(jsonData.title).to.eql(pm.collectionVariables.get('bookTitle'));",
              "});",
              "",
              "pm.test('Created id is numeric', function () {",
              "    pm.expect(Number(jsonData.id)).to.be.a('number');",
              "});",
              "",
              "pm.environment.set('createdBookId', String(jsonData.id));",
              "pm.environment.set('bookId', String(jsonData.id));"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"{{bookTitle}}\",\n  \"body\": \"Created from Postman collection\",\n  \"userId\": {{userId}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/books",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "books"
          ]
        },
        "description": "Создаёт новую запись книги и сохраняет bookId в Environment."
      },
      "response": []
    },
    {
      "name": "2. Read all books (GET)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response time is below 2000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(2000);",
              "});",
              "",
              "const jsonData = pm.response.json();",
              "",
              "pm.test('Response is an array', function () {",
              "    pm.expect(jsonData).to.be.an('array');",
              "});",
              "",
              "pm.test('Array is not empty', function () {",
              "    pm.expect(jsonData.length).to.be.above(0);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/books?userId={{userId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "books"
          ],
          "query": [
            {
              "key": "userId",
              "value": "{{userId}}"
            }
          ]
        },
        "description": "Получает список книг для userId из Environment."
      },
      "response": []
    },
    {
      "name": "3. Read one book (GET)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response time is below 2000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(2000);",
              "});",
              "",
              "const jsonData = pm.response.json();",
              "",
              "pm.test('Response contains id', function () {",
              "    pm.expect(jsonData).to.have.property('id');",
              "});",
              "",
              "pm.test('id matches bookId variable', function () {",
              "    pm.expect(String(jsonData.id)).to.eql(String(pm.environment.get('bookId')));",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/books/{{bookId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "books",
            "{{bookId}}"
          ]
        },
        "description": "Получает одну книгу по bookId из Environment."
      },
      "response": []
    },
    {
      "name": "4. Update book (PUT)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response time is below 2000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(2000);",
              "});",
              "",
              "const jsonData = pm.response.json();",
              "",
              "pm.test('Response title is updated', function () {",
              "    pm.expect(jsonData.title).to.eql(`Updated ${pm.collectionVariables.get('bookTitle')}`);",
              "});",
              "",
              "pm.test('Response id matches bookId', function () {",
              "    pm.expect(String(jsonData.id)).to.eql(String(pm.environment.get('bookId')));",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": {{bookId}},\n  \"title\": \"Updated {{bookTitle}}\",\n  \"body\": \"Updated by Postman\",\n  \"userId\": {{userId}}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/books/{{bookId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "books",
            "{{bookId}}"
          ]
        },
        "description": "Обновляет книгу по bookId."
      },
      "response": []
    },
    {
      "name": "5. Delete book (DELETE)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200 or 204', function () {",
              "    pm.expect([200, 204]).to.include(pm.response.code);",
              "});",
              "",
              "pm.test('Response time is below 2000ms', function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(2000);",
              "});",
              "",
              "pm.test('Response body is empty object', function () {",
              "    const text = pm.response.text().trim();",
              "    pm.expect(text === '' || text === '{}' || text.toLowerCase() === 'null').to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/books/{{bookId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "books",
            "{{bookId}}"
          ]
        },
        "description": "Удаляет книгу по bookId."
      },
      "response": []
    }
  ]
}